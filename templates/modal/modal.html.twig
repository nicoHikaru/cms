<!-- Trigger/Open The Modal -->
{# <button id="myBtn">Open Modal</button> #}

<!-- The Modal -->
<div id="myModal" class="modal">

  <!-- Modal content -->
  <div class="modal-content">
    <span class="close">&times;</span>
    <h3>Se Connecter</h3>
    <form method="POST">
      <ul>
        <li class="flexColumn">
          <label for="email">Email</label>
          <input type="email" name="email" id="email" placeholder="Saisir..."/>
        </li>
        <li class="flexColumn">
          <label for="mdp">Mot de passe</label>
           <input type="password" name="password" id="mdp" placeholder="Saisir..."/>
        </li>
        <li id="liSub">
          <input type="submit" name="submit" id="btnValide" class="button" value="Valider" />
        </li>
      </ul>
    </form>
  </div>

</div>