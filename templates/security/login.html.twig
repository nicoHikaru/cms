{% extends 'base.html.twig' %}

{% block title %}Se Connecter{% endblock %}

{% block body %}
<section class="contenair contentLogReg">
    <div class="box boxLogReg">
        <div class="imgLogReg">
           {# <a href='https://fr.freepik.com/vecteurs/compte-client'>Compte client vecteur créé par vectorjuice - fr.freepik.com</a> #}
           <img src="{{ asset('img/connection.jpg')}}" alt="connection" width="350px" height="350px"/>
        </div>
        <form method="post" class="formLogRegister">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">Se Connecter</h1>
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="mgtForm form" autocomplete="email" required autofocus>
            <label for="inputPassword" class="mgtForm">Password</label>
            <input type="password" name="password" id="inputPassword" class="mgtForm form" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

            <button class="button mgtForm" type="submit">
                Valider
            </button>
        </form>
    </div><!-- box -->
</section>
{% endblock %}
